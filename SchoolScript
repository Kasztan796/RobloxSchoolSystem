local school = {}
school.__index = school

function school.new(name : string)
	local newschool = {}
	newschool.Name = name
	setmetatable(newschool, school)
	return newschool
end

function school:AddStudent(name : string, age : number)
	local newstudent = {}
	newstudent.Name = name
	newstudent.Age = age
	newstudent.Grades = {English = math.random(1,6), Math = math.random(1,6), Biology = math.random(1,6), Physics = math.random(1,6), Chemistry = math.random(1,6)}
	
	table.insert(self, newstudent)
	return newstudent
end

return school
